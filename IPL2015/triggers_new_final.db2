create trigger trigsix after insert on ipl.batsc referencing new as n for each row update ipl.player set sixs=sixs+n.sixs where p_id=n.p_id;create trigger trigfour after insert on ipl.batsc referencing new as n for each row update ipl.player set fours=fours+n.fours where p_id=n.p_id;;create trigger trigrun after insert on ipl.batsc referencing new as n for each row update ipl.player set runs=runs+n.runs where p_id=n.p_id;;create trigger trigfifty after insert on ipl.batsc referencing new as n for each row update ipl.player set fifty=fifty+1 where p_id=n.p_id and n.runs>=50 and n.runs<100;;create trigger trighundred after insert on ipl.batsc referencing new as n for each row update ipl.player set hundred=hundred+1 where p_id=n.p_id and n.runs>100;;create trigger trigwt after insert on ipl.ballsc referencing new as n for each row update ipl.player set wtaken=wtaken+n.wtaken where p_id=n.p_id;;create trigger trigcatch after insert on ipl.batsc referencing new as n for each row update ipl.player set catches=catches+1 where name=n.CAUGHTBY and type_of_out='catch';;create trigger trigwltm after insert on ipl.result referencing new as n for each row begin if n.status='WIN' then update ipl.team set no_of_matches=no_of_matches+1,lose=lose+1 where name=n.loser; update ipl.team set no_of_matches=no_of_matches+1,win=win+1 where name=n.team_name; else update ipl.team set no_of_matches=no_of_matches+1 where name=n.team_name; end if; end;;create trigger trignorating after update on ipl.VOTES referencing new as n for each row update ipl.player set likes=likes+n.rating where p_id=n.p_id;;create trigger trigrecordbt after insert on ipl.batsc referencing new as n for each row MODE DB2SQL begin ATOMIC if n.runs > 149 and n.runs<200 then insert into ipl.record (p_id,matchno,description) values(n.p_id,n.matchno,'150+ runs'); elseif n.runs>199 then insert into ipl.record (p_id,matchno,description) values(n.p_id,n.matchno,'200+ runs'); end if; end;;create trigger trigrecordbl after insert on ipl.ballsc referencing new as n for each row MODE DB2SQL begin ATOMIC if n.wtaken>=5 then insert into ipl.record(p_id,matchno,description) values(n.p_id,n.matchno,'5 wicket haul'); end if; end;